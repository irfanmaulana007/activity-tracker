{
  "semi": false,
  "tabWidth": 2,
  "printWidth": 100,
  "singleQuote": true,
  "trailingComma": "all",
  "jsxSingleQuote": true,
  "bracketSpacing": true,
  "bracketSameLine": true,

  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrderParserPlugins": ["typescript", "jsx", "decorators-legacy"],
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "^constants/(.*)$",
    "^hooks/(.*)$",
    "^components/(.*)$",
    "^services/(.*)$",
    "^stores/(.*)$",
    "^types/(.*)$",
    "^utils/(.*)$",
    "^assets/(.*)$"
  ],
  "plugins": ["@trivago/prettier-plugin-sort-imports"]
}
